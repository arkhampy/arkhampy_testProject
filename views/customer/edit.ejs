<form action="/customer/update/ <%= customer.id %>" method="post">
  <h2>Edit a Customer</h2>

  <input value="<%= customer.name %>" type="text" placeholder="Name" name="name"><br>
  <input value="<%= customer.email %>" type="text" placeholder="Email" name="email"><br>
  <input value="<%= customer.state %>" type="text" placeholder="State" name="state"><br>
  <input type="submit" value="Edit Customer">

</form>
